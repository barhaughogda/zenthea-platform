{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "import"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/recommended",
    "plugin:import/typescript"
  ],
  "settings": {
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true
      }
    }
  },
  "rules": {
    "import/no-restricted-paths": [
      "error",
      {
        "zones": [
          {
            "target": "./services/**/*",
            "from": "./services/**/*",
            "message": "Services must not depend on other services. Use APIs or events for inter-service communication."
          },
          {
            "target": "./services/**/*",
            "from": "./apps/**/*",
            "message": "Services must not depend on app code."
          },
          {
            "target": "./apps/**/*",
            "from": "./services/**/*",
            "message": "Apps must not import service-internal code. Use service APIs or SDKs."
          },
          {
            "target": "./packages/**/*",
            "from": "./services/**/*",
            "message": "Shared packages must be context-independent and cannot depend on services."
          },
          {
            "target": "./packages/**/*",
            "from": "./apps/**/*",
            "message": "Shared packages must be context-independent and cannot depend on apps."
          }
        ]
      }
    ]
  },
  "overrides": [
    {
      "files": ["apps/**/*"],
      "rules": {
        "import/no-restricted-paths": [
          "error",
          {
            "zones": [
              {
                "target": "./apps/**/*",
                "from": "./services/**/*",
                "message": "Apps must not depend on service internals."
              },
              {
                "target": "./apps/**/*",
                "from": "./packages/**/*",
                "except": ["./packages/sdk-*", "./packages/ui", "./packages/core"],
                "message": "Apps should only depend on SDKs, UI, and core packages."
              }
            ]
          }
        ]
      }
    }
  ]
}
